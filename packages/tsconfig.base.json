{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],

    "module": "ES2020",
    "allowJs": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "preserveConstEnums": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
